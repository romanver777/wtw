{
  "name": "wtw",
  "version": "1.0.0",
  "description": "Проект \"What to watch\"",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npx webpack-dev-server --mode development --open",
    "build": "npx webpack --mode production",
    "lint": "npx eslint --ext .js,.jsx,.ts,.tsx --fix src/",
    "test": "npx jest",
    "test:loki": "npm run sbbuild && npx loki --requireReference --reactUri file:./storybook-static",
    "loki:update": "npm run build-storybook && npx loki update --requireReference --reactUri file:./storybook-static",
    "loki:approve": "npx loki approve",
    "sb": "start-storybook -p 6006",
    "sbbuild": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run lint",
      "pre-push": "npm test && npm run lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@webpack-cli/init": "^1.1.3",
    "@webpack-cli/serve": "^1.3.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.4",
    "enzyme": "^3.11.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "loki": "^0.28.1",
    "mini-css-extract-plugin": "^1.5.0",
    "path": "^0.12.7",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "history": "^4.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "5.2.0",
    "redux": "^4.1.0"
  },
  "engines": {
    "node": "14.16.1"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  }
}
